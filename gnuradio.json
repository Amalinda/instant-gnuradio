{
    "builders": [{
        "type": "qemu",
        "iso_url": "{{user `iso_url`}}",
        "iso_checksum": "{{user `iso_checksum`}}",
        "iso_checksum_type": "{{user `iso_checksum_type`}}",
        "output_directory": "vm-qemu",
        "vm_name": "{{user `vm_name`}}",
        "disk_size": "{{user `disk_size`}}",
        "format": "raw",
        "headless": "{{user `headless`}}",
        "http_directory": ".",
        "boot_wait": "5s",
        "boot_command": [
            "<esc><wait>",
            "<esc><wait>",
            "<enter><wait>",
            "/install/vmlinuz ",
            "initrd=/install/initrd.gz ",
            "net.ifnames=0 ",
            "auto-install/enable=true ",
            "debconf/priority=critical ",
            "preseed/url=http://{{.HTTPIP}}:{{.HTTPPort}}/preseed.cfg ",
            "<enter>"
        ],
        "ssh_timeout": "{{user `ssh_timeout`}}",
        "ssh_username": "gnuradio",
        "ssh_password": "gnuradio",
        "shutdown_command": "sudo systemctl poweroff",
        "qemuargs": [
            ["-m", "{{user `memory`}}"],
            ["-smp", "{{user `cpus`}}"]
        ]
    }, {
        "type": "virtualbox-iso",
        "guest_os_type": "Ubuntu_64",
        "iso_url": "{{user `iso_url`}}",
        "iso_checksum": "{{user `iso_checksum`}}",
        "iso_checksum_type": "{{user `iso_checksum_type`}}",
        "output_directory": "vm-virtualbox",
        "vm_name": "{{user `vm_name`}}",
        "disk_size": "{{user `disk_size`}}",
        "headless": "{{user `headless`}}",
        "http_directory": "http",
        "boot_wait": "5s",
        "boot_command": [
            "<esc><wait>",
            "<esc><wait>",
            "<enter><wait>",
            "/install/vmlinuz ",
            "initrd=/install/initrd.gz ",
            "net.ifnames=0 ",
            "auto-install/enable=true ",
            "debconf/priority=critical ",
            "preseed/url=http://{{.HTTPIP}}:{{.HTTPPort}}/preseed.cfg ",
            "<enter>"
        ],
        "ssh_timeout": "{{user `ssh_timeout`}}",
        "ssh_username": "gnuradio",
        "ssh_password": "gnuradio",
        "shutdown_command": "sudo systemctl poweroff",
        "vboxmanage": [
            ["modifyvm", "{{.Name}}", "--memory", "{{user `memory`}}"],
            ["modifyvm", "{{.Name}}", "--cpus", "{{user `cpus`}}"]
        ]
    }, {
        "type": "vmware-iso",
        "guest_os_type": "ubuntu-64",
        "iso_url": "{{user `iso_url`}}",
        "iso_checksum": "{{user `iso_checksum`}}",
        "iso_checksum_type": "{{user `iso_checksum_type`}}",
        "output_directory": "vm-vmware",
        "vm_name": "{{user `vm_name`}}",
        "disk_size": "{{user `disk_size`}}",
        "headless": "{{user `headless`}}",
        "http_directory": "http",
        "boot_wait": "5s",
        "boot_command": [
            "<esc><wait>",
            "<esc><wait>",
            "<enter><wait>",
            "/install/vmlinuz ",
            "initrd=/install/initrd.gz ",
            "net.ifnames=0 ",
            "auto-install/enable=true ",
            "debconf/priority=critical ",
            "preseed/url=http://{{.HTTPIP}}:{{.HTTPPort}}/preseed.cfg ",
            "<enter>"
        ],
        "ssh_timeout": "{{user `ssh_timeout`}}",
        "ssh_username": "gnuradio",
        "ssh_password": "gnuradio",
        "shutdown_command": "sudo systemctl poweroff",
        "vmx_data": {
            "memsize": "{{user `memory`}}",
            "numvcpus": "{{user `cpus`}}"
        }
    }],
    "provisioners": [
        {
            "type": "shell",
            "scripts": [
                "scripts/init.sh"
            ]
        },
        {
            "type": "file",
            "source": "assets/wallpaper.png",
            "destination": "Pictures/wallpaper.png"
        },
        {
            "type": "file",
            "source": "assets/zshrc",
            "destination": ".zshrc"
        },
        {
            "type": "file",
            "source": "assets/zshenv",
            "destination": ".zshenv"
        },
        {
            "type": "file",
            "source": "assets/terminator",
            "destination": ".config/terminator/config"
        },
        {
            "type": "file",
            "source": "assets/gnuradio-web.desktop",
            "destination": ".local/share/applications/gnuradio-web.desktop"
        },
        {
            "type": "file",
            "source": "assets/UbuntuMono-Nerd-Font.ttf",
            "destination": ".fonts/UbuntuMono-Nerd-Font.ttf"
        },
        {
            "type": "file",
            "source": "assets/vimrc",
            "destination": ".vimrc"
        },
        {
            "type": "file",
            "source": "assets/zenburn.vim",
            "destination": ".vim/colors/zenburn.vim"
        },
        {
            "type": "file",
            "source": "assets/spacemacs",
            "destination": ".spacemacs"
        },
        {
            "type": "file",
            "source": "assets/gitconfig",
            "destination": ".gitconfig"
        },
        {
            "type": "shell",
            "scripts": [
                "scripts/setup.sh"
            ]
        },
        {
            "type": "shell",
            "scripts": [
                "scripts/cleanup.sh"
            ],
            "execute_command": "sudo -E bash '{{.Path}}'"
        }
    ],
    "__post-processors": [{
        "compression_level": 6,
        "keep_input_artifact": true,
        "output": "{{user `output_directory`}}/{{user `vm_name`}}.raw.gz",
        "type": "compress"
    }],
    "variables": {
        "cpus": "2",
        "disk_size": "20000",
        "headless": "true",
        "iso_checksum": "ca5d9a8438e2434b9a3ac2be67b5c5fa2c1f8e3e40b954519462935195464034",
        "iso_checksum_type": "sha256",
        "iso_url": "http://releases.ubuntu.com/17.04/ubuntu-17.04-server-amd64.iso",
        "memory": "4096",
        "ssh_timeout": "60m",
        "vm_name": "gnuradio"
    }
}
